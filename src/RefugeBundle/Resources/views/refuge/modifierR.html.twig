{% extends'base.html.twig' %}

{% block ajoutRefugee %}
    <div class="new-style page-header header-filter" data-parallax="true" style="background-image: url( {{ asset ('assets/myimg/4.jpg')}}) ">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="brand text-center">
                        <h2 class="card-title text-center">Add Refugee</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">

        <div class="col-md-12">

            <div class="card" >

                <div class="card-body color">

                    <h2 class="card-title text-center">Add Refugee</h2>


                    {{ form_start(form) }}
                    <div class="row">




                        <div class="col-md-6">


                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                                  <span class="input-group-text">
                                                    <i class="material-icons">face</i>
                                                  </span>
                                    </div>
                                    {{ form_row(form.prenom, {'attr': {'class' : 'form-control' }}) }}

                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">

                                    <div class="input-group-prepend">
                                                  <span class="input-group-text">


                                                    <i class="material-icons">face</i>
                                                  </span>
                                    </div>

                                    {{ form_row(form.nom, {'attr': {'class' : 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                                      <span class="input-group-text">
                                                        <i class="material-icons">place</i>
                                                      </span>
                                    </div>

                                    {{ form_row(form.nationalite, {'attr': { 'class' : 'selectpicker'}}) }}

                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                                      <span class="input-group-text">
                                                        <i class="material-icons"><span class="iconify" data-icon="mdi:gender-transgender" data-inline="false"></span></i>
                                                      </span>
                                        <div>
                                            <div class="dropdown bootstrap-select show selectW" id="selectW">

                                                {{ form_row(form.sexe) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-6">
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons"><span class="iconify" data-icon="emojione-monotone:birthday-cake" data-inline="false"></span></i>
                          </span>
                                    </div>
                                    {{ form_row(form.birthD, {'attr': {'class' : 'form-control' , 'type' : 'date'}}) }}
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons"><span class="iconify" data-icon="bx:bxs-edit-location" data-inline="false"></span></i>
                          </span>
                                    </div>
                                    {{ form_row(form.birthLoc, {'attr': {'placeholder': 'Birth Location' , 'class' : 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">edit</i>
                          </span>
                                    </div>
                                    {{ form_row(form.socialSit, {'attr': {'placeholder': 'situation sociale...' , 'class' : 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="input-group bmd-form-group">

                                {{ form_row(form.img) }}

                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">near_me</i>
                          </span>
                                    </div>

                                    {{ form_row(form.camp, {'attr': {'placeholder': 'camp..' , 'class' : 'form-control' , 'label' : 'Modifier'}}) }}

                                </div>
                            </div>

                        </div>



                    </div>
                    {{ form_end(form) }}







                </div>




            </div>
        </div>

    </div>



{% endblock %}
